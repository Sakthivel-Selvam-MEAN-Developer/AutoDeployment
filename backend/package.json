{
    "name": "backend",
    "private": true,
    "version": "0.0.0",
    "devDependencies": {
        "@types/compression": "^1.7.3",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.18",
        "@types/jest": "^29.5.5",
        "@types/morgan": "^1.9.6",
        "@types/node": "^20.8.3",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "eslint": "^8.51.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^27.4.0",
        "jest-mock-req-res": "^1.0.2",
        "prettier": "3.0.3",
        "prisma": "^5.4.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vite": "^4.4.5",
        "vite-plugin-node": "^3.0.2",
        "vitest": "^0.34.6"
    },
    "dependencies": {
        "@jest/globals": "^29.7.0",
        "@ory/cli": "^0.2.2",
        "@ory/client": "^1.3.0",
        "@prisma/client": "5.5.2",
        "axios": "^1.5.1",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dayjs": "^1.11.10",
        "dotenv-cli": "^7.3.0",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "nock": "^13.3.4",
        "supertest": "^6.3.3",
        "winston": "^3.11.0"
    },
    "scripts": {
        "dev": "vite",
        "proxy": "ory proxy --no-jwt --port 4000 http://localhost:3000/",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint ./src --max-warnings 157",
        "pris": "yarn prismaUp; yarn prismaMigrateDev; yarn prismaMigrateTest",
        "prismaGen": "prisma migrate dev --create-only --name ",
        "prismaGenCheck": "prisma migrate status ",
        "prismaUp": "prisma generate",
        "prismaMigrateDev": "prisma migrate deploy",
        "prismaMigrateTest": "dotenv -e .env.test -- prisma migrate deploy",
        "prismaMigrateCi": "dotenv -e .env.ci -- prisma migrate deploy",
        "test": "dotenv -e .env.test -- jest --watch --runInBand",
        "testCI": "dotenv -e .env.ci -- jest --runInBand",
        "testOnce": "dotenv -e .env.test -- jest --runInBand",
        "t": "dotenv -e .env.test -- jest --watch",
        "format": "prettier -c src",
        "seedDevDb": "dotenv -e .env -- ts-node src/hrm/seed/dev/index.ts"
    },
    "prisma" : {
      "seed" : "ts-node src/hrm/seed/dev/index.ts"
    }
}
