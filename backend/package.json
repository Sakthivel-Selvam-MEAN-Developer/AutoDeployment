{
    "name": "backend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.5",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "@vitest/coverage-v8": "^1.1.0",
        "eslint": "^8.56.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.29.1",
        "prettier": "3.1.1",
        "prisma": "^5.7.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.10",
        "vite-plugin-node": "^3.1.0",
        "vitest": "^1.1.0"
    },
    "dependencies": {
        "@ory/cli": "^0.2.2",
        "@ory/client": "^1.4.7",
        "@prisma/client": "5.7.1",
        "axios": "^1.6.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dayjs": "^1.11.10",
        "dotenv-cli": "^7.3.0",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "morgan": "^1.10.0",
        "nock": "^13.4.0",
        "pm2": "^5.3.0",
        "supertest": "^6.3.3",
        "winston": "^3.11.0"
    },
    "scripts": {
        "dev": "vite --host",
        "proxy": "ory proxy --no-jwt --port 4000 http://localhost:3000/",
        "build": "tsc && vite build",
        "runProd": "pm2-runtime start ecosystem.config.cjs --env production",
        "preview": "vite preview",
        "lint": "eslint ./src --ext ts,tsx --report-unused-disable-directives --max-warnings 72",
        "pris": "yarn prismaUp; yarn prismaMigrateDev; yarn prismaMigrateTest",
        "prismaGen": "prisma migrate dev --create-only --name ",
        "prismaGenCheck": "prisma migrate status ",
        "prismaUp": "prisma generate",
        "prismaMigrateDev": "prisma migrate deploy",
        "prismaMigrateTest": "dotenv -e .env.test -- prisma migrate deploy",
        "prismaMigrateCi": "dotenv -e .env.ci -- prisma migrate deploy",
        "test": "dotenv -e .env.test -- vitest",
        "testCI": "dotenv -e .env.ci -- vitest",
        "testOnce": "dotenv -e .env.test -- vitest --run",
        "t": "dotenv -e .env.test -- vitest --poolOptions.threads.singleThread=true --coverage.enabled=false",
        "format": "prettier -c src",
        "seedDevDb": "vite-node --script src/devSeed/index.ts"
    }
}
