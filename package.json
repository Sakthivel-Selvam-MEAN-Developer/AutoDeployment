{
  "name": "wonder-why",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "libs",
    "frontend",
    "backend",
    "apps", "web"
  ],
  "scripts": {
    "u": "yarn workspace web",
    "ui": "yarn workspace web dev",
    "backend": "yarn workspace backend dev",
    "b": "yarn workspace backend",
    "setUpHusky": "husky install",
    "all": "yarn u format -w; yarn u lint --fix; yarn u testOnce; yarn b format -w; yarn b lint --fix; yarn b testOnce",
    "db": "cd docker; docker compose up -d",
    "dbKill": "cd docker; docker compose down",
    "sql": "cd docker; docker compose exec postgres psql -U postgres -d wonderwhy"
  },
  "devDependencies": {
    "husky": "^8.0.3"
  }
}
