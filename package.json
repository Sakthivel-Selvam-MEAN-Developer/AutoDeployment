{
  "name": "wonder-why",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "libs",
    "frontend",
    "backend",
    "apps",
    "web",
    "uiTest"
  ],
  "scripts": {
    "u": "yarn workspace web",
    "deployWeb": "yarn workspace web build; cp -R web/dist/* nginx/html",
    "ui": "yarn workspace web dev",
    "backend": "yarn workspace backend dev",
    "b": "yarn workspace backend",
    "setUpHusky": "husky install",
    "all": "yarn u format -w; yarn u lint --fix; yarn u testOnce; yarn b format -w; yarn b lint --fix; yarn b testOnce",
    "db": "docker-compose up -d db",
    "key": "docker-compose up -d keycloak",
    "fix": "yarn u format -w; yarn b format -w; yarn u lint --fix; yarn b lint --fix",
    "keySetup": "docker-compose exec keycloak sh -c '/config/waitForKeycloak.sh'",
    "keyUser": "docker-compose exec keycloak sh -c '/config/createUser.sh'",
    "logs": " docker compose exec local-nginx sh -c 'tail -f /usr/share/nginx/logs/*'",
    "nginx": "docker-compose up -d local-nginx",
    "dbKill": "docker compose down db",
    "sql": "docker compose exec db psql -U postgres -d wonderwhy",
    "terra": "docker compose run -it terra bash",
    "cert": "docker compose run --rm certbot certonly --manual --preferred-challenges -d 'auth.magnum.wondermove.in,magnum.wondermove.in'"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@types/jest": "^29.5.12",
    "husky": "^9.0.11"
  },
//  "packageManager": "yarn@4.3.1"
}
